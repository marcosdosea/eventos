@model AreaInteresseModel

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
</head>

<div class="main fluid">
    <h1 class="blue-normal">Excluir uma área de interesse</h1>

    <h3>Certeza que deseja excluir esta área de Interesse?</h3>
    <div class="form">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
        </dl>
        <form asp-action="Delete" class="row">
            <div class="d-flex flex-row">
                <div class="form-group" style="margin-right: 10px;">
                    <a asp-action="Index" class="btn btn-outline-blue-normal">Cancelar</a>
                </div>
                <div class="form-group">
                    <input type="submit" value="Excluir" class="btn btn-danger" />
                </div>
            </div>
        </form>
        
    </div>
</div>