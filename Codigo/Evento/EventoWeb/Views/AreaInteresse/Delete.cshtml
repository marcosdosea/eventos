@model AreaInteresseModel

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
</head>

<div class="main fluid">
    <div class="breadcrumb">
        <a asp-controller="Home" asp-action="Index"><img src="/img/icon-wrapper.svg" /><p style="color:#0D6EFD;display:inline-block">Home</p></a>
        <a asp-controller="Areainteresse" asp-action="Index" style="color:#0D6EFD;display:inline-block;text-decoration:none;"><p>/Área de interesse</p></a>
        <p style="color:#6C757D;display:inline-block">/Excluir área de interesse</p>
    </div>
    <h1 class="blue-normal">Excluir uma área de interesse</h1>

    <h3>Quer mesmo excluir este item?</h3>
    <div class="form">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <p> </p>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir item" class="btn btn-danger" />
            <a asp-action="Index" style="text-decoration:none">Cancelar</a>
        </form>
    </div>
</div>