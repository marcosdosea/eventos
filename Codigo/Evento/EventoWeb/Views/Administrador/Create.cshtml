@model PessoaModel 
 
@{ 
    ViewData["Title"] = "Create"; 
} 
 
<head> 
    <link rel="stylesheet" type="text/css" href="~/css/style.css"> 
</head> 
 
<div> 
    <h1 class="blue-normal">Cadastrar Administrador do Sistema</h1> 
    <hr /> 
    <div class="row"> 
        <div> 
            <form asp-action="Create" method="post" onsubmit="return validarFormulario()"> 
                <div class="row"> 
                    <div class="col-6 col-sm-6 col-md-3 col-lg-2"> 
                        <div class="form-group"> 
                            <label asp-for="Cpf" class="control-label">CPF</label> 
                            <input asp-for="Cpf" class="form-control" id="Cpf" placeholder="000.000.000-00" oninput="formatarCPF()" maxlength="14" /> 
                            <span asp-validation-for="Cpf" class="text-danger"></span> 
                        </div> 
                    </div> 
                    <div class="col-12 col-sm-6 col-md-3 col-lg-4"> 
                        <div class="form-group"> 
                            <label asp-for="Nome" class="control-label">Nome</label> 
                            <input asp-for="Nome" class="form-control" id="Nome" placeholder="Nome completo" /> 
                            <span asp-validation-for="Nome" class="text-danger"></span> 
                        </div> 
                    </div> 
                    <div class="col-6 col-sm-6 col-md-3 col-lg-2"> 
                        <div class="form-group"> 
                            <label asp-for="Telefone1" class="control-label">Telefone</label> 
                            <input asp-for="Telefone1" type="number" class="form-control" id="Telefone1" placeholder="Com o DDD" /> 
                            <span asp-validation-for="Telefone1" class="text-danger"></span> 
                        </div> 
                    </div> 
                    <div class="col-6 col-sm-6 col-md-3 col-lg-4"> 
                        <div class="form-group"> 
                            <label asp-for="Email" class="control-label">Email</label> 
                            <input asp-for="Email" class="form-control" id="Email" placeholder="Seu e-mail" /> 
                            <span asp-validation-for="Email" class="text-danger"></span> 
                        </div> 
                    </div> 
                </div> 
                <br /> 
 
                <div class="d-flex flex-row-reverse"> 
                    <div class="form-group"> 
                        <input type="submit" value="Adicionar Administrador" class="btn btn-lg btn-blue-normal" /> 
                    </div> 
                </div> 
                <br /> 
            </form> 
        </div> 
    </div> 
 
    <div class="row"> 
        <div class="col-md-12"> 
            <table id="tablePessoa" class="table table-striped"> 
                <thead class="blue-normal blue-normal-bg-table"> 
                <tr> 
                    <th>CPF</th> 
                    <th>Nome</th> 
                    <th>Ações</th> 
                </tr> 
                </thead> 
            </table> 
        </div> 
    </div> 
    <div class="d-flex flex-row-reverse"> 
        <div class="form-group" style="margin-right: 10px;"> 
            <a asp-controller="Evento" asp-action="GerenciarEvento" asp-route-idEvento="@Model.Id" class="btn btn-lg btn-blue-normal">Voltar</a> 
        </div> 
    </div> 
    <!-- Modal --> 
    <div class="modal fade" id="confirmRemovalModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true"> 
        <div class="modal-dialog"> 
            <div class="modal-content"> 
                <div class="modal-header"> 
                    <h5 class="modal-title" id="modalLabel">Confirmar Remoção</h5> 
                </div> 
                <div class="modal-body"> 
                    Quer realmente remover <strong><span id="pessoaNome"></span></strong> como do evento: <strong><span id="eventoNome"></span></strong>? 
                </div> 
                <div class="modal-footer"> 
                    <button type="button" class="btn btn-outline-blue-normal" data-dismiss="modal">Cancelar</button> 
                    <button type="button" class="btn btn-danger" id="confirmRemovalButton">Remover</button> 
                </div> 
            </div> 
        </div> 
    </div>
</div>