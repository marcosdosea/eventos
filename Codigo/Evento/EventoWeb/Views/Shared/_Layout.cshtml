<!DOCTYPE html>

<html lang="pt-BR">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" type="text/css" href="~/css/style.css">
	<link rel="stylesheet" type="text/css" href="~/css/headerAndFooter.css">
	<link rel="stylesheet"
		  href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css">
</head>

<body>
	<div class="main-wrapper">
		<header>
			<nav class="navbar navbar-expand-lg navbar-light bg-light">
				<div class="container-fluid">
					<div class="logo me-3">
						<a href="/" title="Ir para a página inicial">
							<img src="/img/LOGOTIPO.png" alt="Logotipo" />
						</a>
					</div>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav me-auto">
							<li class="nav-item">
								<div class="input-group me-3" style="width: auto;">
									<span class="input-group-text" style="border-radius: 10px 0 0 10px; background-color: #fff; border-right: 0; border-color: blue;">
										<i class="bi bi-search"></i>
									</span>
									<input type="text" class="form-control custom-input" placeholder="Pesquisar eventos..." aria-label="Search"
										   style="border-radius: 0 10px 10px 0; border-left: 0; border-color: blue;">
								</div>
							</li>
							<li class="nav-item menu-view"><a class="nav-link">Localização</a></li>
							<li class="nav-item menu-view"><a class="nav-link">Seu evento aqui!</a></li>
						</ul>
						<div class="buton-menu custom-flex-row">
							<div class="custom-flex-row custom-hide">
								<div class="nav-item me-3 align-content-center color: blue-normal">
									<a>Localização</a>
								</div>
								<div class="nav-item me-3 align-content-center color: blue-normal">
									<a>Seu evento aqui!</a>
								</div>
							</div>
							<partial name="_LoginPartial" />
						</div>
					</div>
				</div>
			</nav>
		</header>
	</div>

	<div class="container flex-grow-1">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>
	<footer class="footer">
		<div class="footer-background">
			<div class="custom-flex-container">
				<div class="custom-column-flex align-items-left">
					<div class="tittle-text-footer">Bora lá para<br />mais um evento?</div>
					<div class="flex-column-container">
						<div class="help-text">Precisa de ajuda?</div>
						<div class="contact-container ml-auto">
							<button class="btn btn-contact contact-text btn-custom-height">
								Fale com o Bora
								lá!
							</button>
						</div>
					</div>
				</div>
				<div class="flex-start-container">
					<div class="column-flex-container">
						<div class="institutional-text">Institucional</div>
						<div class="about">Sobre nós</div>
						<div class="about">Marca</div>
						<div class="about">Fale com o Bora lá</div>
					</div>
					<div class="column-flex-container">
						<div class="institutional-text">Termos</div>
						<div class="about">Lei da Meia-Entrada</div>
						<div class="about">Termos de Serviço</div>
						<div class="about">Termos de Privacidade</div>
					</div>
				</div>
				<div class="column-flex-container">
					<div class="institutional-text">Redes Sociais</div>
					<div class="flex-container">
						<div class="icon-container">
							<a href="https://www.instagram.com" target="_blank"><i class="bi bi-instagram"></i></a>
						</div>
						<div class="icon-container">
							<a href="https://www.facebook.com" target="_blank"><i class="bi bi-facebook"></i></a>
						</div>
						<div class="icon-container">
							<a href="https://www.linkedin.com" target="_blank"><i class="bi bi-linkedin"></i></a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</footer>
	</div>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/js/formHelpers.js"></script>
	<script src="~/js/hamburguer.js"></script>
	<script src="~/js/mobileMenu.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>
