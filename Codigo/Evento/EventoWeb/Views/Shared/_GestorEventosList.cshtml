@model IEnumerable<EventoWeb.Models.EventoModel>

@if (Model != null && Model.Any())
{
    <div class="container-fluid mt-4">
        <div class="card w-100">
            <div class="card-header">
                <h5 class="blue-normal mb-0">Meus Eventos</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="blue-normal blue-normal-bg-table">
                            <tr>
                                <th>ID</th>
                                <th>Data Início</th>
                                <th>Nome do Evento</th>
                                <th>Tipo do Evento</th>
                                <th>Status</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@(item.DataInicio.HasValue ? item.DataInicio.Value.ToString("dd/MM/yyyy") : "-")</td>
                                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NomeTipoEvento)</td>
                                    <td>
                                        @{
                                            string statusDescricao = "Desconhecido";
                                            string statusClass = "";
                                            switch (item.Status)
                                            {
                                                case "A":
                                                    statusDescricao = "Ativo";
                                                    statusClass = "text-success";
                                                    break;
                                                case "C":
                                                    statusDescricao = "Cadastro";
                                                    statusClass = "text-primary";
                                                    break;
                                                case "F":
                                                    statusDescricao = "Finalizado";
                                                    statusClass = "text-secondary";
                                                    break;
                                                case "I":
                                                    statusDescricao = "Inativo";
                                                    statusClass = "text-danger";
                                                    break;
                                            }
                                        }
                                        <span class="@statusClass">@statusDescricao</span>
                                    </td>
                                    <td class="text-center">
                                        <a asp-controller="Evento" asp-action="GerenciarEvento" asp-route-idEvento="@item.Id" class="btn btn-sm btn-primary" title="Gerenciar Evento">
                                            <i class="bi bi-gear"></i> Gerenciar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container-fluid mt-4">
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> Você ainda não possui eventos atribuídos para gerenciar.
        </div>
    </div>
} 