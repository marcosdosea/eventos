@model TipoInscricaocreateModel

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
</head>

<div class="container-fluid no-padding">
    <div class="row">
        <h1 class="blue-normal">Novo Tipo de Inscrição</h1>
        <div class="row">
            <div>
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Campo oculto para enviar o IdEvento -->
                    <input type="hidden" asp-for="TipoInscricao.IdEvento" />

                    <div class="form-group mb-2">
                        <label asp-for="TipoInscricao.Nome" class="control-label"></label>
                        <input asp-for="TipoInscricao.Nome" class="form-control" />
                        <span asp-validation-for="TipoInscricao.Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="TipoInscricao.Descricao" class="control-label"></label>
                        <textarea asp-for="TipoInscricao.Descricao" class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
                        <span asp-validation-for="TipoInscricao.Descricao" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group mb-2">
                                <label asp-for="TipoInscricao.IdEvento" class="control-label"></label>
                                <select asp-for="TipoInscricao.IdEvento" class="form-control" asp-items="Model.Evento" disabled>
                                    
                                    <option value="@Model.TipoInscricao.IdEvento" selected>
                                        @Model.Evento.FirstOrDefault(e => e.Value == Model.TipoInscricao.IdEvento.ToString())?.Text
                                    </option>
                                </select>
                                <span asp-validation-for="TipoInscricao.IdEvento" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group mb-2">
                                <label asp-for="TipoInscricao.Valor" class="control-label"></label>
                                <input type="number" asp-for="TipoInscricao.Valor" class="form-control" />
                                <span asp-validation-for="TipoInscricao.Valor" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br />
                    <h4 class="blue-normal">Datas</h4>
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="TipoInscricao.DataInicio" class="control-label"></label>
                                <input asp-for="TipoInscricao.DataInicio" class="form-control" type="date" />
                                <span asp-validation-for="TipoInscricao.DataInicio" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="TipoInscricao.Datafim" class="control-label"></label>
                                <input asp-for="TipoInscricao.Datafim" class="form-control" type="date" />
                                <span asp-validation-for="TipoInscricao.Datafim" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-2">
                                <div class="d-flex align-items-center">
                                    <div class="form-check">
                                        <!-- Checkbox que marca se o evento será usado (valor 1) -->
                                        <input class="form-check-input" type="checkbox" value="1" id="UsadaEvento" name="TipoInscricao.UsadaEvento"
                                        @(Model.TipoInscricao.UsadaEvento == 1 ? "checked" : "")>
                                        <label class="form-check-label" for="UsadaEvento">Usado em Evento</label>
                                        <!-- Campo oculto para enviar valor 0 quando o checkbox não está marcado -->
                                        <input type="hidden" name="TipoInscricao.UsadaEvento" value="0">
                                    </div>
                                </div>
                                <span asp-validation-for="TipoInscricao.UsadaEvento" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <div class="d-flex align-items-center">
                                    <div class="form-check">
                                        <!-- Checkbox que marca se o subevento será usado (valor 1) -->
                                        <input class="form-check-input" type="checkbox" value="1" id="UsadaSubevento" name="TipoInscricao.UsadaSubevento"
                                        @(Model.TipoInscricao.UsadaSubevento == 1 ? "checked" : "")>
                                        <label class="form-check-label" for="UsadaSubevento">Usado em Subevento</label>
                                        <!-- Campo oculto para enviar valor 0 quando o checkbox não está marcado -->
                                        <input type="hidden" name="TipoInscricao.UsadaSubevento" value="0">
                                    </div>
                                </div>
                                <span asp-validation-for="TipoInscricao.UsadaSubevento" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="d-flex justify-content-end">
                    <div class="d-flex flex-row">
                        <div class="form-group">
                            <a href="/TipoInscricao/Index?idEvento=@Model.TipoInscricao.IdEvento" class="btn btn-outline-danger">Cancelar</a>
                        </div>
                        <div class="form-group" style="margin-right: 10px;">
                            <input type="submit" value="Salvar" class="btn btn-blue-normal color-white" />
                        </div>
                    </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById('UsadaEvento').addEventListener('change', function () {
        this.nextElementSibling.value = this.checked ? 1 : 0; // Ajusta o valor do campo oculto baseado no estado do checkbox
    });
    document.getElementById('UsadaSubevento').addEventListener('change', function () {
        this.nextElementSibling.value = this.checked ? 1 : 0; // Ajusta o valor do campo oculto baseado no estado do checkbox
    });
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

