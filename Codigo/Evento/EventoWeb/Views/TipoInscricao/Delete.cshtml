@model EventoWeb.Models.TipoInscricaoModel

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
</head>


<div class="container-fluid no-padding">
    <div class="row">
        <h1 class="blue-normal">Deletar Tipo de Inscrição</h1>
        <div>
            <h3>Certeza que deseja excluir este Tipo de Inscrição?</h3>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NomeEvento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NomeEvento)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Valor)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Valor)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DataInicio)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataInicio)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Datafim)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Datafim)
                </dd>
                <dt class="col-sm-2">
                    Usado em @Html.DisplayNameFor(model => model.UsadaEvento)
                </dt>
                <dd class="col-sm-10">
                    @{
                        string usadaevento = "Desconhecido";
                        switch (Model.UsadaEvento)
                        {
                            case 1:
                                usadaevento = "Sim";
                                break;
                            case 2:
                                usadaevento = "Não";
                                break;

                        }
                    }
                    @usadaevento
                </dd>
                <dt class="col-sm-2">
                    Usado em @Html.DisplayNameFor(model => model.UsadaSubevento)
                </dt>
                <dd class="col-sm-10">
                    @{
                        string usadasubevento = "Desconhecido";
                        switch (Model.UsadaSubevento)
                        {
                            case 1:
                                usadasubevento = "Sim";
                                break;
                            case 2:
                                usadasubevento = "Não";
                                break;
                            
                        }
                    }
                    @usadasubevento
                </dd>
            </dl>

            <form asp-action="Delete" class="row">
                <div class="d-flex flex-row-reverse">
                    <div class="form-group">
                        <input type="submit" value="Excluir" class="btn btn-blue-normal color-white" />
                    </div>
                    <div class="form-group" style="margin-right: 10px;">
                        <a asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>
