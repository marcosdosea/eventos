@model EventoWeb.Models.EventoModel

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="pt-BR">

<h1 class ="blue-normal">Detalhes do Evento</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @{
                var status = Model.Status switch
                {
                    "C" => "Cadastro",
                    "I" => "Inativo",
                    "A" => "Ativo",
                    "F" => "Finalizado",
                    _ => "Desconhecido"
                };
                @status
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Website)
        </dt>
        <dd class="col-sm-10">
            @if (string.IsNullOrWhiteSpace(Model.Website))
            {
                @Html.Raw("-")
            }
            else
            {
                @Html.DisplayFor(model => model.Website)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmailEvento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailEvento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataFim)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataFim)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataInicioInscricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataInicioInscricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataFimInscricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataFimInscricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InscricaoGratuita)
        </dt>
        <dd class="col-sm-10">
            @(Model.InscricaoGratuita == 1 ? "Sim" : "Não")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorInscricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorInscricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventoPublico)
        </dt>
        <dd class="col-sm-10">
            @(Model.EventoPublico == 1 ? "Sim" : "Não")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cep)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cep)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Bairro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Bairro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rua)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rua)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Numero)
        </dt>
        <dd class="col-sm-10">
            @(!string.IsNullOrEmpty(Model.Numero) ? Model.Numero : "S/N")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Complemento)
        </dt>
        <dd class = "col-sm-10">
            @if (string.IsNullOrWhiteSpace(Model.Complemento))
            {
                @Html.Raw("-")
            }
            else
            {
                @Html.DisplayFor(model => model.Complemento)
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PossuiCertificado)
        </dt>
        <dd class = "col-sm-10">
            @(Model.PossuiCertificado == 1 ? "Sim" : "Não")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FrequenciaMinimaCertificado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FrequenciaMinimaCertificado)
        </dd>
        <dt class = "col-sm-2">
            Tipo do Evento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdTipoEvento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VagasOfertadas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VagasOfertadas)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VagasReservadas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VagasReservadas)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VagasDisponiveis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VagasDisponiveis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TempoMinutosReserva)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TempoMinutosReserva)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CargaHoraria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CargaHoraria)
        </dd>
    </dl>
</div>
<div>
    <div class="row">
        <div class="col-1">
            <div>
                <a asp-action="Index" class="btn btn-outline-danger">Voltar</a>
            </div>
        </div>
        <div class="col-1">
            <button type="button" class="btn btn-blue-normal" onclick="location.href='@Url.Action("Edit", new { id = Model.Id })'">
                Editar
            </button>
        </div>
    </div>
</div>
