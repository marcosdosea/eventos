@model IEnumerable<EventoWeb.Models.EventoModel>

@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
</head>

<div class="container-fluid no-padding">
    <div class="row">

        <div class="col-2 btn-blue-normal">
        </div>

        <div class="col-10 padding-lateral-50">
            <h1 class="blue-normal">Seja Bem-vindo</h1>
            <h3>Confira os eventos do sistema!</h3>
            <table class="table table-striped">
                <thead class="blue-normal blue-normal-bg-table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DataInicio)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdTipoEvento)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataInicio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdTipoEvento)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <h3 class="blue-normal">Publique um novo evento</h3>
            <button type="button" class="btn btn-lg btn-blue-normal color-white"
                    onclick="location.href='@Url.Action("Create")'">
                Criar evento
            </button>
        </div>

    </div>
</div>
