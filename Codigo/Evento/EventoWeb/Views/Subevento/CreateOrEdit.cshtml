@model EventoWeb.Models.SubeventoCreateModel

@{
ViewData["Title"] = "CreateOrEdit";
}

<h1 class="blue-normal">Cadastrar Subevento</h1>
<hr />

<div class="row">
    <div>
        <form asp-action="CreateOrEdit" method="post">
            @if (Model.Subevento.Id != 0)
            {
            <input type="hidden" name="idSubevento" value="@Model.Subevento.Id" />
            }
            <div class="row">
                <div class="col-lg-3">
                    <div class="form-group">
                        <label for="IdEvento" class="control-label">Evento</label>
                        <select id="IdEvento" name="IdEvento" class="form-control" readonly>
                            @if (Model.Evento == null || Model.Evento.Id == 0)
                            {
                                <option value="0">Não Informado</option>
                            }
                            else
                            {
                                <option value="@Model.Evento.Id" selected>@Model.Evento.Nome</option>
                            }
                        </select>
                        @Html.HiddenFor(model => model.Evento.Id)
                    </div>
                </div>
            </div>
            <br/>
            <h4 class="blue-normal">Dados do Subevento</h4>
            <div class="row">
                <div class="col-8 col-sm-8 col-md-8 col-lg-8">
                    <div class="form-group">
                        <label asp-for="Subevento.Nome" class="control-label">Nome</label>
                        <input asp-for="Subevento.Nome" class="form-control" placeholder="Nome do sub-evento"/>
                        <span asp-validation-for="Subevento.Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Subevento.IdTipoEvento" class="control-label">Tipo de Subevento</label>
                        <select asp-for="Subevento.IdTipoEvento" class="form-control" asp-items="Model.TiposEventos">
                            <option value="">Escolha Tipo de Subevento</option>
                        </select>
                        <span asp-validation-for="Subevento.IdTipoEvento" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="Subevento.Descricao" class="control-label">Descrição</label>
                        <textarea asp-for="Subevento.Descricao" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Subevento.Descricao" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <div class="form-group">
                        <label asp-for="Subevento.DataInicio" class="control-label">Data de Início</label>
                        <input asp-for="Subevento.DataInicio" class="form-control" type="date"/>
                        <span asp-validation-for="Subevento.DataInicio" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group">
                        <label asp-for="Subevento.DataFim" class="control-label">Data de Fim</label>
                        <input asp-for="Subevento.DataFim" class="form-control" type="date"/>
                        <span asp-validation-for="Subevento.DataFim" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group">
                        <label asp-for="Subevento.InscricaoGratuita" class="control-label">Inscrição Gratuita?</label>
                        <div class="d-flex align-items-center">
                            <div class="form-check me-2">
                                <input asp-for="Subevento.InscricaoGratuita" class="form-check-input" type="radio" value="2" id="InscricaoGratuitaSim")>
                                <label class="form-check-label" for="InscricaoGratuitaSim">Sim</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Subevento.InscricaoGratuita" class="form-check-input" type="radio" value="1" id="InscricaoGratuitaNao">
                                <label class="form-check-label" for="InscricaoGratuitaNao">Não</label>
                            </div>
                        </div>
                        <span asp-validation-for="Subevento.InscricaoGratuita" class="text-danger"></span>
                    </div>
                </div>
            <div class="col-3">
                <div class="form-group mb-3">
                    <label asp-for="Subevento.PossuiCertificado" class="control-label">Possui Certificação?</label>
                    <div class="d-flex align-items-center">
                        <div class="form-check me-2">
                            <input asp-for="Subevento.PossuiCertificado" class="form-check-input" type="radio" value="2" id="PossuiCertificadoSim" >
                            <label class="form-check-label" for="PossuiCertificadoSim">Sim</label>
                        </div>
                        <div class="form-check">
                            <input asp-for="Subevento.PossuiCertificado" class="form-check-input" type="radio" value="1" id="PossuiCertificadoNao">
                            <label class="form-check-label" for="PossuiCertificadoNao">Não</label>
                        </div>
                    </div>
                    <span asp-validation-for="Subevento.PossuiCertificado" class="text-danger"></span>
                </div>
            </div>
            </div>
            <br/>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Subevento.Status" class="control-label">Status</label>
                        <select asp-for="Subevento.Status" class="form-select">
                            <option value="C">Cadastro</option>
                            <option value="A">Ativo</option>
                            <option value="F">Finalizado</option>
                            <option value="I">Inativo</option>
                        </select>
                        <span asp-validation-for="Subevento.Status" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Subevento.DataInicioInscricao" class="control-label">Início das Inscrições</label>
                        <input asp-for="Subevento.DataInicioInscricao" class="form-control" type="date"/>
                        <span asp-validation-for="Subevento.DataInicioInscricao" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Subevento.DataFimInscricao" class="control-label">Fim das Inscrições</label>
                        <input asp-for="Subevento.DataFimInscricao" class="form-control" type="date"/>
                        <span asp-validation-for="Subevento.DataFimInscricao" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group" id="FrequenciaMinimaCertificado">
                        <label asp-for="Subevento.FrequenciaMinimaCertificado" class="control-label">Frequência Mínima Emissão Certificado</label>
                        <div class="input-group">
                            <input asp-for="Subevento.FrequenciaMinimaCertificado" class="form-control" type="number" step="0.01" min="0" max="100"/>
                            <span class="input-group-text">%</span>
                        </div>
                        <span asp-validation-for="Subevento.FrequenciaMinimaCertificado" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Subevento.VagasOfertadas" class="control-label">Vagas Ofertadas</label>
                        <input asp-for="Subevento.VagasOfertadas" class="form-control" type="number" step="1" min="0" />
                        <span asp-validation-for="Subevento.VagasOfertadas" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Subevento.CargaHoraria" class="control-label">Carga Horária</label>
                        <input asp-for="Subevento.CargaHoraria" class="form-control" type="number" step="1" min="0" />
                        <span asp-validation-for="Subevento.CargaHoraria" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group" id="valorInscricaoGroup">
                        <label asp-for="Subevento.ValorInscricao" class="control-label">Menor Valor de Inscrição</label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input asp-for="Subevento.ValorInscricao" class="form-control" type="number" id="valorInscricao" />
                        </div>
                        <span asp-validation-for="Subevento.ValorInscricao" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <!-- Espaço em branco -->
                </div>
                <div class="col-1 mt-4">
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-primary"/>
                    </div>
                </div>
                <div class="col-1 mt-4">
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                    </div>
                </div>
            </div>
            <br/>
        </form>
    </div>
</div>

@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
