@model EventoWeb.Models.ModelocrachaModel

@{
    ViewData["Title"] = "Delete";
}


<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
</head>

<div class="container-fluid no-padding">
    <div class="row">
        <h1 class="blue-normal">Excluir modelo de crachá</h1>
        <div>
            <h3>Certeza que deseja excluir este Modelo?</h3>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdEvento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NomeEvento)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Texto)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Texto)
                <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Logotipo)
                </dt>
                <dd class="col-sm-10">
                        @if (!string.IsNullOrEmpty(Model.LogotipoBase64))
                        {
                        <img src="data:image/png;base64,@Model.LogotipoBase64" alt="Logotipo" style="width:200px;height:200px;object-fit:contain;" />
                        }
                        else
                        {
                        <span>Sem logotipo</span>
                        }
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                <!-- Campo oculto para enviar o idEvento -->
                <input type="hidden" name="idEvento" value="@Model.IdEvento" />
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="d-flex justify-content-end">
                    <div class="d-flex flex-row">
                        <div class="form-group" style="margin-right: 10px;">
                            <input type="submit" value="Excluir" class="btn btn-danger" />
                        </div>
                        <div class="form-group">
                            <a href="@Url.Action("Index", "Modelocracha", new { idEvento = Model.IdEvento})" class="btn btn-outline-blue-normal">Cancelar</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
