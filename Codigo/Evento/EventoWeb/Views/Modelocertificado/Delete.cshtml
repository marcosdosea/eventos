@* Views/Modelocertificado/Delete.cshtml *@
@model EventoWeb.Models.ModelocertificadoModel

@{
    ViewData["Title"] = "Excluir Modelo de Certificado";
}

<h1>Excluir Modelo de Certificado</h1>

<h3>Tem certeza que deseja excluir este modelo?</h3>
<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Evento</dt>
            <dd class="col-sm-9">@Model.NomeEvento</dd>

            <dt class="col-sm-3">Data de Emissão</dt>
            <dd class="col-sm-9">@Model.DataEmissao.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Código</dt>
            <dd class="col-sm-10">@Model.Codigo</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
