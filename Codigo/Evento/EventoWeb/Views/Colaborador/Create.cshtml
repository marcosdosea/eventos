@model EventoWeb.Models.ColaboradorModel

@{
    ViewData["Title"] = "Novo Colaborador";
}

<h1>Novo Colaborador</h1>

@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger">
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
}

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header">
            <h5>Dados Pessoais</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 form-group">
                    <label asp-for="Colaborador.Cpf" class="form-label"></label>
                    <input asp-for="Colaborador.Cpf" class="form-control" />
                    <span asp-validation-for="Colaborador.Cpf" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="Colaborador.Nome" class="form-label"></label>
                    <input asp-for="Colaborador.Nome" class="form-control" />
                    <span asp-validation-for="Colaborador.Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 form-group">
                    <label asp-for="Colaborador.NomeCracha" class="form-label"></label>
                    <input asp-for="Colaborador.NomeCracha" class="form-control" />
                    <span asp-validation-for="Colaborador.NomeCracha" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="Colaborador.Sexo" class="form-label"></label>
                    <select asp-for="Colaborador.Sexo" class="form-control">
                        <option value="">Selecione...</option>
                        <option value="M">Masculino</option>
                        <option value="F">Feminino</option>
                        <option value="N">Prefiro não dizer</option>
                    </select>
                    <span asp-validation-for="Colaborador.Sexo" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h5>Contato</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 form-group">
                    <label asp-for="Colaborador.Email" class="form-label"></label>
                    <input asp-for="Colaborador.Email" class="form-control" />
                    <span asp-validation-for="Colaborador.Email" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="Colaborador.Telefone1" class="form-label"></label>
                    <input asp-for="Colaborador.Telefone1" class="form-control" />
                    <span asp-validation-for="Colaborador.Telefone1" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 form-group">
                    <label asp-for="Colaborador.Telefone2" class="form-label"></label>
                    <input asp-for="Colaborador.Telefone2" class="form-control" />
                    <span asp-validation-for="Colaborador.Telefone2" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h5>Endereço</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 form-group">
                    <label asp-for="Colaborador.Cep" class="form-label"></label>
                    <input asp-for="Colaborador.Cep" class="form-control" />
                    <span asp-validation-for="Colaborador.Cep" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="Colaborador.Estado" class="form-label"></label>
                    <input asp-for="Colaborador.Estado" class="form-control" />
                    <span asp-validation-for="Colaborador.Estado" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="Colaborador.Cidade" class="form-label"></label>
                    <input asp-for="Colaborador.Cidade" class="form-control" />
                    <span asp-validation-for="Colaborador.Cidade" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 form-group">
                    <label asp-for="Colaborador.Bairro" class="form-label"></label>
                    <input asp-for="Colaborador.Bairro" class="form-control" />
                    <span asp-validation-for="Colaborador.Bairro" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="Colaborador.Rua" class="form-label"></label>
                    <input asp-for="Colaborador.Rua" class="form-control" />
                    <span asp-validation-for="Colaborador.Rua" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="Colaborador.Numero" class="form-label"></label>
                    <input asp-for="Colaborador.Numero" class="form-control" />
                    <span asp-validation-for="Colaborador.Numero" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 form-group">
                    <label asp-for="Colaborador.Complemento" class="form-label"></label>
                    <input asp-for="Colaborador.Complemento" class="form-control" />
                    <span asp-validation-for="Colaborador.Complemento" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}